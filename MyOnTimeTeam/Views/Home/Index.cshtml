<div data-bind="template: 'gridTmpl'" class="responsive-grid">
</div>

<script id="gridTmpl" type="text/html">
    <!-- ko foreach: usersSorted -->
    <div class="well" data-bind="visible: visible">
        <div class="media">
            <a class="pull-left">
                <img class="media-object thumbnail" data-bind="attr: { src: userImage }" />
            </a>
            <div class="media-body">
                <div class="close" data-bind="visible: !hidden(), click: hide" title="Hide this user"><i class="icon-remove"></i></div>
                <div class="close" data-bind="visible: hidden, click: show" title="Show this user"><i class="icon-eye-open"></i></div>
                <h4>
                    <!-- ko text: fullName -->
                    <!-- /ko -->
                </h4>
                <div data-bind="visible: dataLoaded">
                    <div>
                        <!-- ko if: viewModel.itemFilters()[0] != "null" -->
                        <span data-bind="visible: defectsShow() !== '0'" class="label label-warning"><span data-bind="text: viewModel.itemTypes()[0]"></span>:
                            <!-- ko text: defectsShow -->
                            <!-- /ko -->
                        </span>
                        <!-- /ko -->
                        <!-- ko if: viewModel.itemFilters()[1] != "null" -->
                        <span data-bind="visible: featuresShow() !== '0'" class="label label-info"><span data-bind="text: viewModel.itemTypes()[1]"></span>:
                            <!-- ko text: featuresShow -->
                            <!-- /ko -->
                        </span>
                        <!-- /ko -->
                        <!-- ko if: viewModel.itemFilters()[2] != "null" -->
                        <span data-bind="visible: incidentsShow() !== '0'" class="label label-important"><span data-bind="text: viewModel.itemTypes()[2]"></span>:
                            <!-- ko text: incidentsShow -->
                            <!-- /ko -->
                        </span>
                        <!-- /ko -->
                        <!-- ko if: viewModel.itemFilters()[3] != "null" -->
                        <span data-bind="visible: tasksShow() !== '0'" class="label label-success"><span data-bind="text: viewModel.itemTypes()[3]"></span>:
                            <!-- ko text: tasksShow -->
                            <!-- /ko -->
                        </span>
                        <!-- /ko -->

                    </div>
                    <div>
                        <span>Estimated work remaining:
                            <!-- ko text: workRemaining -->
                            <!-- /ko -->
                        </span>
                    </div>
                </div>
                <div data-bind="visible: !dataLoaded()">
                    <i class="icon icon-refresh spin"></i>
                </div>
            </div>
        </div>
    </div>
    <!-- /ko -->
</script>